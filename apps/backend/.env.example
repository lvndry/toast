# Toast AI Backend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/toast_ai

# MongoDB SSL configuration (optional, for production)
MONGODB_SSL_CA_CERTS=
MONGODB_SSL_CERTFILE=
MONGODB_SSL_KEYFILE=

# =============================================================================
# VECTOR DATABASE (Pinecone)
# =============================================================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# =============================================================================
# LLM SERVICES
# =============================================================================
# OpenAI API key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key for Claude models
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Clerk JWT verification URL
CLERK_JWKS_URL=https://your-clerk-instance.clerk.accounts.dev/.well-known/jwks.json

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
# In development, you can use "*" but in production specify exact domains
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
# Maximum text size for embedding (4MB limit with buffer)
EMBEDDING_MAX_TEXT_SIZE_BYTES=3500000

# Batch size for processing chunks
EMBEDDING_BATCH_SIZE=50

# Pinecone upsert batch size
EMBEDDING_UPSERT_BATCH_SIZE=100

# Chunk size for text splitting
EMBEDDING_CHUNK_SIZE=1200

# Chunk overlap for text splitting
EMBEDDING_CHUNK_OVERLAP=200

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
# PostHog configuration
POSTHOG_API_KEY=your_posthog_api_key_here
POSTHOG_HOST=https://us.i.posthog.com

# Enable/disable tracking (true/false)
TRACKING_ENABLED=true

# =============================================================================
# SECURITY
# =============================================================================
# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your_secret_key_here

# JWT token expiry in hours
JWT_EXPIRY_HOURS=24

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limits per minute for different user tiers
RATE_LIMIT_FREE=10
RATE_LIMIT_BUSINESS=60
RATE_LIMIT_ENTERPRISE=200

# =============================================================================
# MONITORING
# =============================================================================
# Prometheus metrics port
PROMETHEUS_PORT=9090

# =============================================================================
# BUSINESS LOGIC
# =============================================================================
# Maximum document size in MB
MAX_DOCUMENT_SIZE_MB=10

# Maximum analysis time in seconds
ANALYSIS_TIMEOUT_SECONDS=120

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Set to true for development debugging
DEBUG=false
