# Clausea AI Backend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/clausea

# =============================================================================
# VECTOR DATABASE (Pinecone)
# =============================================================================
PINECONE_API_KEY=your_pinecone_api_key_here

# =============================================================================
# LLM SERVICES
# =============================================================================
# OpenAI API key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key for Claude models
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Clerk JWT verification URL
CLERK_JWKS_URL=https://your-clerk-instance.clerk.accounts.dev/.well-known/jwks.json

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
# In development, you can use "*" but in production specify exact domains
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
# Batch size for processing chunks
EMBEDDING_BATCH_SIZE=50

# Pinecone upsert batch size
EMBEDDING_UPSERT_BATCH_SIZE=100

# Chunk size for text splitting
EMBEDDING_CHUNK_SIZE=1200

# Chunk overlap for text splitting
EMBEDDING_CHUNK_OVERLAP=200

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
# PostHog configuration
POSTHOG_API_KEY=your_posthog_api_key_here
POSTHOG_HOST=https://us.i.posthog.com

# Enable/disable tracking (true/false)
TRACKING_ENABLED=true

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limits per minute for different user tiers
RATE_LIMIT_FREE=10
RATE_LIMIT_BUSINESS=60
RATE_LIMIT_ENTERPRISE=200

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Set to true for development debugging
DEBUG=false

# =============================================================================
# PAYMENT PROCESSING (Paddle)
# =============================================================================
# Paddle API credentials
PADDLE_API_KEY=your_paddle_api_key_here
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret_here
PADDLE_ENVIRONMENT=sandbox  # or 'production'

# Paddle Product Price IDs (create these in Paddle dashboard)
PADDLE_PRICE_INDIVIDUAL_MONTHLY=pri_xxx
PADDLE_PRICE_INDIVIDUAL_ANNUAL=pri_yyy
PADDLE_PRICE_BUSINESS_MONTHLY=pri_zzz
PADDLE_PRICE_BUSINESS_ANNUAL=pri_aaa
# Note: Enterprise is custom pricing, handled via sales
