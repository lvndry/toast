# Toast AI Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# Backend API URL
BACKEND_BASE_URL=http://localhost:8000

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# logo.dev
LOGO_DEV_API_KEY=

# =============================================================================
# OPTIONAL - ANALYTICS
# =============================================================================

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# OPTIONAL - AUTHENTICATION URLS
# =============================================================================

# Clerk authentication URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Environment (development/production/test)
NODE_ENV=development

# =============================================================================
# PAYMENT PROCESSING (Paddle)
# =============================================================================

# Paddle Price IDs (get these from Paddle dashboard)
NEXT_PUBLIC_PADDLE_PRICE_INDIVIDUAL_MONTHLY=pri_xxx
NEXT_PUBLIC_PADDLE_PRICE_INDIVIDUAL_ANNUAL=pri_yyy
NEXT_PUBLIC_PADDLE_PRICE_BUSINESS_MONTHLY=pri_zzz
NEXT_PUBLIC_PADDLE_PRICE_BUSINESS_ANNUAL=pri_aaa

# API URL for backend
NEXT_PUBLIC_API_URL=http://localhost:8000
